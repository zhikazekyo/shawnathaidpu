    <style type="text/css">
        .msg_show {
            position: fixed;
            z-index: 90000;
            margin: auto;
            width: 800px;
            height: 600px;
            top: 50%;
            left: 50%;
            margin-top: -300px;
            margin-left: -400px;
            border-radius: 36px 36px 36px 36px;
            -moz-border-radius: 36px 36px 36px 36px;
            -webkit-border-radius: 36px 36px 36px 36px;
            border: 0px solid #000000;
            background-color: #FF3366;
            text-align: center;
            display: none;
        }
        .img-circle {
            height: 70px;
            width: 70px;
            border-radius: 50%;
        }
        p.indent {
            padding-left: 60em
        }
        .nav-user-menu-item {
            position: relative;
            height: 36px;
            line-height: 36px;
            display: block;
            text-align: right;
        }
        .avatar {
            background: url(//assets.kaidee.com/blackpearl/41aefe61f836b84ad53d2aec53d7f1b1/images/member-profile-avatar.png);
            background-size: cover;
        }
        .avatar-section {
            position: absolute;
            top: 50px;
            right: 8%;
            text-align: center;
            cursor: pointer;
        }
        .avatar-section .text-avatar.edit-bubble {
            position: absolute;
            top: 35px;
            left: 40px;
            width: 20px;
            height: 20px;
            background-color: hsla(0,0%,100%,.6);
            color: rgba(0,0,0,.6);
            border-radius: 10px;
        }
        .navbar-right
        {
            width: 200px;
            height: 30px;
        }

        .navbar-btn{height: 60px;}
    </style>

